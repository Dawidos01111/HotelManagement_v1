@model IEnumerable<HotelManagement.Models.Rooms2>
@*@using MultipleModelInOneView;
@model HotelManagement.ViewModel.RoomsAndBooking;*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">Rooms</h4>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Room" asp-action="Index" class="btn btn-primary">Create new room</a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() >0)
    {
        <table class="table table-bordered table-striped" style="width=100%">
            <!--Wyświetlenie kolumn tabeli-->
            <thead>
                <tr>
                    <th>
                        Room Number
                    </th>
                    <th>
                        Room Prics
                    </th>
                    <th>
                        Booking Status
                    </th>
                    <th>
                        Room Type
                    </th>
                    <th>
                        Room Capacity
                    </th>
                    <th>
                        Room Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <!--Wyświetlenie danych z tabeli-->
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.RoomNumber</td>
                    <td width="15%">@obj.RoomPrice</td>
                    <td width="15%">@obj.BookingStatusId</td>
                    <td width="15%">@obj.RoomTypeId</td>
                    <td width="15%">@obj.RoomCapacity</td>
                    <td width="25%">@obj.RoomDescription</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Room" asp-action="Edit" asp-route-Id="@obj.RoomId" class="btn btn-success mx-2">Edit</a>
                            <a asp-controller="Room" asp-action="Delete" asp-route-Id="@obj.RoomId" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No room exists.</p>
    }

</div>
