@model HotelManagement.Models.Rooms2;
@{
    ViewData["Title"] = "AddRoom";
}

<div class="text-center">
    <h1 class="display-4">Add new Room</h1>
</div>

<form method="post" asp-action="AddRoom">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h2 class="text-info pt-3">Add room</h2>
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input class="form-control" asp-for="RoomNumber" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomPrice"></label>
        <input class="form-control" asp-for="RoomPrice" />
        <span asp-validation-for="RoomPrice" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="BookingStatusId"></label>
        @Html.DropDownListFor(model => model.BookingStatusId, @Model.ListOfBookingStatus, "Please select")
        <span asp-validation-for="BookingStatusId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomTypeId"></label>
        @Html.DropDownListFor(model => model.RoomTypeId, @Model.ListOfRoomType, "Please select")
        <span asp-validation-for="BookingStatusId" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="RoomCapacity"></label>
        <input class="form-control" asp-for="RoomCapacity" />
        <span asp-validation-for="RoomCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDescription"></label>
        <input class="form-control" asp-for="RoomDescription" />
        <span asp-validation-for="RoomDescription" class="text-danger"></span>
    </div>
    @*Przyciski*@
    <div class="form-row col-md-6">
        <div class="col-3">
            <button type="submit" class="btn btn-primary btn-block">Add room</button>
        </div>

        <div class="col col-md-6">
            <a asp-action="Index" class="btn btn-success btn-block">Back</a>
        </div>
    </div>
</form>
